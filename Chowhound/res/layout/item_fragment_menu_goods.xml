<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x12"
        android:layout_marginTop="@dimen/x12" >

        <ImageView
            android:id="@+id/iv_item_frag_menu_goods_img"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ddt_place_holder_brand_default" />

        <TextView
            android:id="@+id/tv_item_frag_menu_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_item_frag_menu_goods_img"
            android:singleLine="true"
            android:text="超级豪华比萨" />

        <TextView
            android:id="@+id/tv_item_frag_menu_goods_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_frag_menu_goods_img"
            android:layout_toRightOf="@+id/iv_item_frag_menu_goods_img"
            android:singleLine="true"
            android:text="销量" />

        <TextView
            android:id="@+id/tv_frag_menu_goods_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_frag_menu_goods_img"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:layout_toRightOf="@+id/tv_item_frag_menu_goods_name1"
            android:singleLine="true"
            android:text="120" />

        <TextView
            android:id="@+id/tv_item_frag_menu_goods_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_frag_menu_goods_img"
            android:layout_toRightOf="@+id/tv_frag_menu_goods_sales_volume"
            android:singleLine="true"
            android:text="份" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_item_frag_menu_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:text="18"
            android:textColor="@color/app_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/每份"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        
        <Button
            android:id="@+id/btn_item_frag_menu_goods_del"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:visibility="invisible"
            android:background="@drawable/ddt_bg_img_btn_dish_item_dec_abled" />

        <TextView
            android:id="@+id/tv_item_frag_menu_goods_selected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:textSize="18sp"
            android:visibility="invisible"
            android:text="0" />

        <Button
            android:id="@+id/btn_item_frag_menu_goods_add"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/ddt_bg_img_btn_dish_item_right_abled" />


    </LinearLayout>

</LinearLayout>