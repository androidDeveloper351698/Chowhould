<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y40"
    android:orientation="horizontal"
    android:gravity="center_vertical" 
    android:padding="@dimen/x7"
    android:background="@color/app_color2">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x7"
        android:src="@drawable/activity_main_top_bar_address" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxEms="15"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:text="广东第二师范学院-教师公寓" />
    
    <View android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/iv_fragment_index_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:src="@drawable/fragment_index_top_bar_scan" />

</LinearLayout>
